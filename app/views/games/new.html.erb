<div class="container">
  <h1>A New Game Is On !!! </h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <span class="letter"><%= letter.upcase %></span>
    <% end %>
  </div>

  <div class="form">
    <form action='/score' method='post'>
      <%= hidden_field_tag :letters_array, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="answer" value="<%= params[:answer]%>" placeholder="Type your word here">
      <input type="submit" value="Confirm!">
    </form>
  </div>

</div>
